<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tip_shuffle_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_tip_background"
        android:padding="16dp"
        android:text="@string/tip_default"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_line" />

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/camera_info_text"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_shuffle_bar" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_camera_main"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/info_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic_chart"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:text="@string/statistics_button_text"
        android:textColor="#000000"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/alarm_settings_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_button"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/alarm_settings_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic_button_alarm"
        android:drawablePadding="4dp"
        android:elevation="6dp"
        android:text="@string/alarm_settings_button_text"
        android:textColor="#000000"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/statistics_button"
        app:layout_constraintTop_toTopOf="@+id/statistics_button"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/soju_bottle_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:text="@string/soju_bottle_button"
        android:textColor="#000000"
        android:textSize="18sp"
        app:icon="@drawable/ic_soju"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="#4CAF50"
        app:cornerRadius="8dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/statistics_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/guide_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:text="재활용 불가한 쓰레기 품목"
        android:textColor="#000000"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_menu_help"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="#F44336"
        app:cornerRadius="8dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/soju_bottle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>